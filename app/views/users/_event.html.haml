- ticket = ticket_for_event_for_current_user(event)
.card
  .card-block
    %h4.card-title= event.name
    .lead.card-subtitle.text-muted= event.event_start.strftime('%A, %B %e, %Y')
    %p.card-text= event.description
  %ul.list-group.list-group-flush
    - unless ticket.nil?
      %li.list-group-item
        = render 'tickets/ticket', ticket: ticket
  .card-footer.text-xs-center
    - unless ticket.nil?
      = link_to 'Details', ticket_path(ticket), class: 'btn btn-secondary-outline'
    - else
      = link_to 'Buy Ticket', new_event_ticket_path(event), class: 'btn btn-primary-outline'
