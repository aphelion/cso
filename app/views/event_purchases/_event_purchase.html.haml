%ul.list-group.list-group-flush
  %li.list-group-item
    .fa.fa-fw.fa-ticket
    #{event_purchase.ticket_purchase.product.name}
    for #{event_purchase.user.full_name}
  - event_purchase.addon_purchases.each do |addon_purchase|
    %li.list-group-item
      %div
        .fa.fa-fw.fa-star
        - if addon_purchase.quantity > 1
          #{addon_purchase.quantity}x
        #{addon_purchase.product.name}
      - addon_purchase.product_purchase_option_choices.each do |choice|
        %div
          .fa.fa-fw.fa-angle-right
          %small #{choice.option}: #{choice.choice}
